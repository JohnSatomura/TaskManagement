<Window x:Class="TaskManagement.SettingWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:TaskManagement"
        mc:Ignorable="d"
        Title="ユーザー設定" Height="326.3" Width="258.2">
    <Grid>
        <Label Content="名前" HorizontalAlignment="Left" Margin="25,16,0,0" VerticalAlignment="Top" Height="30" Width="110"/>
        <Label Content="フォルダパス" HorizontalAlignment="Left" Margin="25,95,0,0" VerticalAlignment="Top" Height="22" Width="70"/>
        <TextBox x:Name="UserName" HorizontalAlignment="Left" Height="23" Margin="50,51,0,0" TextWrapping="Wrap" Text="" VerticalAlignment="Top" Width="145"/>
        <TextBox x:Name="FolderPath" HorizontalAlignment="Left" Height="23" Margin="50,130,0,0" TextWrapping="Wrap" Text="" VerticalAlignment="Top" Width="135"/>
        <Button x:Name="RefBox" Content="参照" HorizontalAlignment="Left" Margin="100,102,0,0" VerticalAlignment="Top" Width="57" Click="Ref_FolderDialog"/>
        <Button Content="キャンセル" HorizontalAlignment="Left" Margin="50,251,0,0" VerticalAlignment="Top" Width="75" Click="Cancel_Update"/>
        <Button Content="保存" HorizontalAlignment="Left" Margin="145,251,0,0" VerticalAlignment="Top" Width="75" Click="Save_UserData"/>

    </Grid>
</Window>
