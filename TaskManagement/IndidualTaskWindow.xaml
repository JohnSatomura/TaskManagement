<Window x:Class="TaskManagement.IndidualTaskWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:TaskManagement"
        mc:Ignorable="d"
        Title="個人タスク" Height="450" Width="800">
    <Grid>
        <Label x:Name="DisplayUserName" Content="" HorizontalAlignment="Left" Margin="25,10,0,0" VerticalAlignment="Top" Height="30" Width="175"/>
        <DataGrid x:Name="TaskTable" ItemsSource="{Binding}" HorizontalAlignment="Left" Height="335" Margin="25,60,0,0" VerticalAlignment="Top" Width="730" BeginningEdit="TaskTable_SelectionChanged">
 
            <DataGrid.Columns>
                <DataGridTemplateColumn Header="進捗">
                    <DataGridTemplateColumn.CellTemplate>
                        <DataTemplate>
                            <CheckBox IsChecked="{Binding Checked2}"  />
                        </DataTemplate>
                    </DataGridTemplateColumn.CellTemplate>
                </DataGridTemplateColumn>
            </DataGrid.Columns>
            
        </DataGrid>
        
    </Grid>
</Window>
